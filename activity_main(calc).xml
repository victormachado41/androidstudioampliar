<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt1" />

    <EditText
        android:id="@+id/edtx1"
        android:layout_width="410dp"
        android:layout_height="48dp"
        android:autofillHints="Any number different than 0"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtx1"
        android:textAlignment="center"
        tools:ignore="DuplicateSpeakableTextCheck,LabelFor" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt2" />

    <EditText
        android:id="@+id/edtx2"
        android:layout_width="410dp"
        android:layout_height="48dp"
        android:autofillHints="Any number different than 0"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtx2"
        android:textAlignment="center"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn1"
        app:backgroundTint="#FF6F00" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn2"
        app:backgroundTint="#01CCD3" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn3"
        app:backgroundTint="#6BCF05" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn4"
        app:backgroundTint="#B3045E" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt3" />

    <TextView
        android:id="@+id/edtx3"
        android:layout_width="410dp"
        android:layout_height="48dp"
        android:autofillHints="Your result will be shown here"
        android:ems="10"
        android:text="@string/edtx3"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:ignore="LabelFor" />
</LinearLayout>